<div class="container px-5">
  <div class="d-flex flex-column justify-content-center my-3">
    <h2 class="font-weight-bold text-center text-md-left"><%= @kit.name %></h2>

    <iframe id="ytplayer" type="text/html" width="100%" height="480"
      src="http://www.youtube.com/embed/<%= @guide.video %>?controls=2&showinfo=1"
      frameborder="0"/>
    </iframe>
  </div>
  <div class="steps">
    <h3 class="font-weight-bold">Pasos a seguir:</h3>
    <% @guide.steps.reverse_each do |step| %>
      <div class="d-flex align-items-center">
        <p class="stepnumber font-weight-bold mr-3" style="font-size: 70px"><%= step.order %>.</p>
        <p class="text-muted"><%= step.content %></p>
      </div>
    <% end %>
  </div>
  <div>
    <h2 class="font-weight-bold text-center">Et Voil√†!</h2>
    <div class="reviews">
      <h5 class="font-weight-bold">Opiniones:</h5>
      <div class="d-flex">
        <p class="col-lg-10 text-muted p-1 border rounded p-3">Escribe tu experiencia...</p>
        <p class="col-lg-2 p-1 btn btn-primary text-center p-3">Enviar</p>
      </div>
    </div>
  </div>
</div>

