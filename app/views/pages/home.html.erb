<div class="jumbotron jumbotron-fluid text-center d-flex justify-content-between align-items-center " style="background-image: url(<%= image_url('bghome.jpg') %>); background-size: cover; background-position: top; min-height: 400px;">
  <div class="container">
    <div class="py-2">
      <%= image_tag( 'easychef_logo.png' , class:"mb-4 d-md-none w-50")%>
      <h2 class="d-xs-none text-primary d-none d-md-block font-weight-bold">Descubrí lo que la cocina puede lograr</h2>
      <p class="lead px-3 text-primary d-sm-block d-md-none" >Descubrí lo que la cocina puede lograr</p>
    </div>
    <div class="container">
        <%= simple_form_for :kit, url: kits_path, method: :get do |f| %>
          <div class="d-md-flex align-items-center mx-md-5">
            <div class=" w-sm-100 flex-grow-1 mb-3">
               <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Busca tu kit o restaurant favorito" %>
            </div>
            <%= f.submit "Buscar", class: "btn btn-primary ml-md-3 w-sm-100 w-md-25 mb-3" %>
        </div>
        <% end %>
    </div>

  </div>
</div>

<div class="container">
  <h4 class="my-5 font-weight-bold">¿Que hay en nuestro menú?</h4>
  <div class="row">
    <%= link_to kits_path, class: "bd-highlight col-md-12 mt-3 text-decoration-none" do  %>
      <%= render("components/card-category", {category: "Todos los Kits", img: "todos_los_kits.jpg"}) %>
    <% end %>
        <% @categories.first(6).each_with_index do |category, index| %>
          <% if [1, 2, 5].include? index %>
            <%= link_to category_kits_path(name: category.name), class: "bd-highlight col-md-4 mt-3 text-decoration-none" do  %>
              <div class="" %>
                <%= render("components/card-category", {category: "#{category.name}", img: "#{category.name.downcase.tr(' ',"_")}.jpg"}) %>
              </div>
            <% end %>
          <% else %>
          <%= link_to category_kits_path(name: category.name), class: "bd-highlight col-md-8 mt-3 text-decoration-none" do  %>
            <div class="" %>
              <%= render("components/card-category", {category: "#{category.name}", img: "#{category.name.downcase.tr(' ',"_")}.jpg"}) %>
            </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
</div>



