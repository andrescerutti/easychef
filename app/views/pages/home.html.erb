<div class="jumbotron jumbotron-fluid text-center d-flex justify-content-between align-items-center " style="background-image: url(<%= image_url('bghome.jpg') %>); background-size: cover; background-position: top; min-height: 500px;">
  <div class="container">
    <div class="py-2">
      <%= image_tag( 'easychef_logo.png' , class:"mb-4 d-md-none")%>
      <h2 class="d-xs-none text-white d-none d-md-block font-weight-bold">La comida de tus restaurantes favoritos en tu cocina</h2>
      <p class="lead px-3 text-primary d-sm-block d-md-none">La comida de tus restaurantes favoritos en tu cocina.</p>
    </div>
    <div class="container">
        <%= simple_form_for :kit, url: kits_path, method: :get do |f| %>
          <div class="d-md-flex align-items-center mx-md-5">
            <div class=" w-sm-100 flex-grow-1">
                <%= f.input :address, placeholder: "Ingresá tu dirección", input_html: { id: "order_address_address", class: 'w-100' }, wrapper_html: { class: 'w-100 mb-md-0' }, label: false %>
            </div>
            <%= f.submit "Buscar", class: "btn btn-primary ml-md-3 w-sm-100 w-md-25" %>
        </div>
        <% end %>
    </div>

  </div>
</div>

<div class="container">
  <h4 class="my-5 font-weight-bold">¿Que hay en nuestro menú?</h4>
  <div class="row">
    <%= link_to kits_path, class: "bd-highlight col-md-12 mt-3 text-decoration-none" do  %>
      <%= render("components/card-category", {category: "Todos los Kits", img: "todos_los_kits.jpg"}) %>
    <% end %>
        <% @categories.first(6).each_with_index do |category, index| %>
          <% if [1, 2, 5].include? index %>
            <%= link_to category_kits_path(name: category.name), class: "bd-highlight col-md-4 mt-3 text-decoration-none" do  %>
              <div class="" %>
                <%= render("components/card-category", {category: "#{category.name}", img: "#{category.name.downcase.tr(' ',"_")}.jpg"}) %>
              </div>
            <% end %>
          <% else %>
          <%= link_to category_kits_path(name: category.name), class: "bd-highlight col-md-8 mt-3 text-decoration-none" do  %>
            <div class="" %>
              <%= render("components/card-category", {category: "#{category.name}", img: "#{category.name.downcase.tr(' ',"_")}.jpg"}) %>
            </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
</div>

