<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h1 class="m-0 kitname"> <strong><%= @kit.name %></strong> </h1>
      <h2 class='kitrest' style="color: grey">Un producto de <strong style=" color: black"><%= @kit.restaurant.name %></strong> </h2>
      <img class="d-md-none w-100 mb-4" src="<%= @kit.image %>" alt="imagen del plato de comida">
      <p class="text-success m-0 kitrat mb-2 "> <strong>El <%= ((@kit.average_rating.to_i)*100)/5 %>% volveria a cocinarlo </strong> </p>

      <div class="d-flex justify-content-between mt-3">

        <div class="d-flex align-items-center">

          <div class="mb-3 mr-3 ml-1">
            Para <i class="fas fa-user"></i>
          </div>

          <div class="" >
            <%= simple_form_for([@kit, @order]) do |f| %>
            <%= f.input :amount, collection: 1..@kit.stock, label: false %>
            <span class="d-none" id="price"><%= @kit.price %></span>
          </div>
        </div>

        <div>
          <p class="kittime rounded-top border border-secondary m-2 p-1 pl-3 pr-3" > <small><i class="far fa-clock"></i> <%= @kit.preparation_time %> min</small> </p>
        </div>

      </div>

      <h4 class='kitdescr mb-5'><%= @kit.description %></h4>
      <%= f.submit "Seleccione la cantidad de Kits", class:"btn btn-primary btn-block disabled", id:"submit_order_kit", disabled:"disabled" %>
      <% end %>
    </div>
    <div class="col-md-6 ">
      <img src="<%= @kit.image %>" alt="imagen del plato de comida" class=" rounded w-100 d-none d-md-block">
    </div>
  </div>

  <div class="description-container">
    <p><strong>Ingredientes:</strong></p>
  </div>
  <div class="image-container d-none d-md-block">
    <div class="cards-scroll">
        <div class="cards-scroll mt-3">
          <% @kit.ingredients.each do |kit| %>
            <div class="card-scroll col-md-4">
              <div class="card-kit border">
                <img src=<%= kit.image %>  />
                <div class="card-body">
                  <div>
                    <h5 class="card-title mb-1"><%= kit.name %></h5>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
<div class="carrousel mt-5">
  <p><strong>Cookwares:</strong></p>
  <div class="cards-scroll">
          <div class="cards-scroll mt-3">
            <% @kit.cookware.each do |kit| %>
              <div class="card-scroll col-md-4">
                <div class="card-kit border">
                  <img src=<%= kit.image %>  />
                  <div class="card-body">
                    <div>
                      <h5 class="card-title mb-1"><%= kit.name %></h5>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
